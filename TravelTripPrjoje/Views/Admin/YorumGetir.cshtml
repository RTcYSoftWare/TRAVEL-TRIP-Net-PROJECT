@model TravelTripPrjoje.Models.Siniflar.Yorumlar
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- YORUM BİLGİLERİNİ ALIP GÜNCELLEME İÇİN GÜNCELLE CONTROLLER A GÖNDEREN FORM ELEMANIMIZ. -->

<h2>Güncellenecek Yorum</h2>

<br />

@using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })

    @Html.LabelFor(x => x.Kullanici_Adi)
    @Html.TextBoxFor(x => x.Kullanici_Adi, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.Yorum)
    @Html.TextAreaFor(x => x.Yorum,15,1, new { @class = "form-control" })

    <br />


    <button class="btn btn-success">YORUMU GÜNCELLE</button>
}


